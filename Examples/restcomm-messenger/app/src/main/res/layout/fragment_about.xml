<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="4dp"
        android:text="Company Name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView_company_title"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="10dp"
        android:text="Telestax"
        android:id="@+id/textView_company_name"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="4dp"
        android:text="Lead Developer"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView_developer_title"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="10dp"
        android:text="Antonis Tsakiridis"
        android:id="@+id/textView_developer_name"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="4dp"
        android:text="Version"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView_version_title"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="10dp"
        android:text="TelScale Restcomm Android Client 1.0.0 BETA3"
        android:id="@+id/textView_version_name"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="4dp"
        android:text="GitHub #"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView_github_hash_title"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:layout_marginBottom="4dp"
        android:text=""
        android:id="@+id/textView_github_hash_name"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

</LinearLayout>